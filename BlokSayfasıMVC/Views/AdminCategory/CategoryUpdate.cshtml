@model EntityLayer.Concrete.Category

@{ ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<br />
<h2>Kategori Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("CategoryUpdate", "AdminCategory", FormMethod.Post))     //AdminCategory controller'ındaki CategoryUpdate action method'una POST isteği ile gönderilmesini sağlar
{
<div class="form-group">
    @Html.Label("Kategori ID")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Kategori Ad")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Kategori Açıklama")
    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Kategori Durum")
    @Html.TextBoxFor(x => x.CategoryStatus, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>}