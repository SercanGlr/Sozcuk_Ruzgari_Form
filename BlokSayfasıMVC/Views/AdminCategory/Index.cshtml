@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <th>@c.CategoryID</th>
            <td>@c.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@c.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/CategoryUpdate/@c.CategoryID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
        </tr>
    }

</table>
<a href="/AdminCategory/AddCategory" class="btn btn-success">Yeni Kategori</a>